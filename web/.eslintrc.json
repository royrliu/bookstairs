{
  "extends": [
    "mantine",
    "plugin:jest/recommended",
    "prettier"
  ],
  "plugins": [
    "jest"
  ],
  "rules": {
    "jest/no-export": "off",
    "jest/expect-expect": "off",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal"
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": [
          "react"
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  }
}
